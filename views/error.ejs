<% layout("layouts/boilerplate") %>

<main class="container-lg d-flex flex-column">
    <div class="row align-items-center justify-content-center min-vh-100 pt-66 mt-n1">
        <div class="col-12 col-sm-8 col-md-6 text-center">
            <h6 class="text-uppercase text-warning mb-3">
                <%= err.status %>
            </h6>
            <h1 class="display-3 mb-3">
                Uh oh.
            </h1>

            <% if (err.status === 404) { %>
            <p class="text-muted mb-4">
                Δεν υπάρχει τίποτα εδώ. Αν πιστεύετε πως υπάρχει κάποιο λάθος, παρακαλώ
                επικοινωνήστε με το διαχειριστή.
            </p>
            <% } else { %>
            <p class="text-muted mb-4">
                <%= err.message %>
            </p>
            <% } %>

            <button class="btn btn-primary"
                onclick="window.history.back() || (window.location ='/')">
                Go back
            </button>
        </div>
    </div>
</main>

<%# Showing the full error in development %>
<% if (process.env.NODE_ENV !== "production" && err.status !== 404 && err.status !== 403) { %>
<p class="text-muted mb-4">
    <%- err.stack.replaceAll("\n", "<br>").replaceAll("    ", "&emsp;").replaceAll("%20", " ") %>
</p>
<% } %>
